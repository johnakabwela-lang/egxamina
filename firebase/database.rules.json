{
  "rules": {
    ".read": false,
    ".write": false,
    
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        "status": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        },
        "profile": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "groups": {
      "$groupId": {
        ".read": "auth != null",
        ".write": "auth != null && (data.child('createdBy').val() === auth.uid || !data.exists())",
        
        "members": {
          ".read": "auth != null",
          "$memberId": {
            ".write": "auth != null && ($memberId === auth.uid || root.child('groups').child($groupId).child('createdBy').val() === auth.uid)"
          }
        },

        "messages": {
          ".read": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
          ".write": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
          "$messageId": {
            ".validate": "newData.hasChildren(['senderId', 'text', 'timestamp']) && 
                         newData.child('senderId').val() === auth.uid &&
                         newData.child('timestamp').isNumber()"
          }
        },

        "activity": {
          ".read": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
          ".write": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
          "lastActivity": {
            ".validate": "newData.isNumber()"
          }
        }
      }
    },

    "group_activity": {
      "$groupId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "activeMembers": {
          "$uid": {
            ".write": "auth != null && $uid === auth.uid"
          }
        },
        "lastActivity": {
          ".write": "auth != null"
        },
        "info": {
          ".write": "auth != null"
        }
      }
    },

    "user_presence": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        "lastOnline": {
          ".validate": "newData.isNumber()"
        },
        "isOnline": {
          ".validate": "newData.isBoolean()"
        }
      }
    },
    "group_activity": {
      "$groupId": {
        ".read": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
        ".write": "auth != null && root.child('groups').child($groupId).child('members').hasChild(auth.uid)",
        "lastActivity": {
          ".validate": "newData.isNumber()"
        }
      }
    }
  }
}
